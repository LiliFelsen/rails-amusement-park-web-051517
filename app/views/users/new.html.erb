<h1>New User</h1>
<%= form_for(@user) do |f| %>
<%= f.label :name  %> <br>
<%= f.text_field :name %> <br>
<%= f.label :password  %> <br>
<%= f.text_field :password  %> <br>
<%= f.label :password_confirmation  %> <br>
<%= f.text_field :password_confirmation  %> <br>
<%= f.label "Height (in inches)" %> <br>
<%= f.number_field :height  %> <br>
<%= f.label "How happy are you? (1-5 scale)" %> <br>
<%= f.number_field :happiness %> <br>
<%= f.label "How nauseous are you? (1-5 scale)" %> <br>
<%= f.number_field :nausea %> <br>
<%= f.label "How many dollars are in your pocket?" %> <br>
<%= f.number_field :tickets %> <br>
<p>Check box if you are a theme park owner<%= f.check_box :admin %></p> <br>
<%= f.submit "Create User" %> <br>
<% end %>

<%= link_to "Back", root_path %>
